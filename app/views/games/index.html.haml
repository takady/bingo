.row
  .col-sm-10.col-sm-offset-1
    %h1 Listing games

.row
  .col-sm-8.col-sm-offset-1
    %table.table.table-striped
      %thead
        %tr
          %th ID
          %th
          %th
      %tbody
        - @games.each do |game|
          %tr
            %td= game.id
            %td= link_to 'Show', game
            %td= link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }

.row
  .col-sm-8.col-sm-offset-1
    = button_to 'Start Game', start_games_path, method: :get, class: 'btn btn-primary'
