.game
  %p#notice= notice

  .row.main
    - if @index == Game::MAX_INDEX
      .col-sm-10.col-sm-offset-1
        %h2.finish.text-center おわり！
    - else
      .col-sm-10.col-sm-offset-1
        %h2.number.text-center= "#{@character} #{@number}"

  .row.move
    .col-sm-1.col-sm-offset-2.back
      = link_to '<', game_path(@game, index: @index - 1), class: 'back-button'
    - unless @index == Game::MAX_INDEX
      .col-sm-1.col-sm-offset-6.next
        = link_to '>', game_path(@game, index: @index + 1), class: 'next-button'

  .row.history
    .col-sm-8.col-sm-offset-2
      %h3= "#{@history}(#{@history.size})"

  .row
    .col-sm-8.col-sm-offset-2
      %h4= "#{@remaining_numbers}(#{@remaining_numbers.size})"

  .row
    .col-sm-8.col-sm-offset-2
      = link_to 'Finish', games_path
