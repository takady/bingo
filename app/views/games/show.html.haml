.row.game
  .col-sm-10.col-sm-offset-1
    - if @index == Game::MAX_INDEX
      %h2.main.finish.text-center おわり
    - else
      %h2.main.number.text-center= "#{Game.character_of(@number)} #{@number}"

.row.move
  .col-sm-1.col-sm-offset-2.back
    - if @index > 0
      = link_to (fa_icon :'chevron-left'), game_path(@game, index: @index - 1)
  .col-sm-1.col-sm-offset-6.next
    - unless @index == Game::MAX_INDEX
      = link_to (fa_icon :'chevron-right'), game_path(@game, index: @index + 1)

.row
  .col-sm-8.col-sm-offset-2.home
    = link_to (fa_icon :home), games_path
